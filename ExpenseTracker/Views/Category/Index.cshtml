@* Define Model*@
@model IEnumerable<Category>

@* Define viewData *@
@{
	ViewData["Title"] = "List Of Category";
}
@* Write Code*@

<div class="container mt-5 table-box3">
	<div style="display :flex; justify-content: space-between">
		<h4>Category List</h4>
		<a asp-controller="Expense" asp-action="Create" class="btn btn-sm btn-success float-right ">Add Category</a>
	</div>
	<table class="table table-hover my-3">
		<thead class="bg-primary text-white">
				<tr>
					<th>@Html.DisplayNameFor(Model => Model.C_Name)</th>
					<th>@Html.DisplayNameFor(Model => Model.C_Expense_Limit)</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.C_Name)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.C_Expense_Limit)
						</td>
						<td class="align-middle">
						<a asp-action="Edit" asp-route-id="@item.C_Id" class="btn btn-outline-primary"><i class="bi bi-pencil"></i> Edit</a> |
						<a asp-action="Delete" asp-route-id="@item.C_Id" class="btn btn-outline-danger"><i class="bi bi-trash3"></i> Delete</a>
							@*Html.ActionLink(item.C_Name, "GetExpenseBycategoryId", "Expense", new{ Categoryid= item.C_Id },null)*@
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>


