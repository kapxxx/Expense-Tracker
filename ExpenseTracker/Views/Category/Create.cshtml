<div class="container mt-3">
	@if (TempData["Limit"] != null)
	{
		<div class="alert alert-warning alert-dismissible fade show" role="alert">
			 @TempData["Limit"]
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
	}
</div>

<div class="row box">
	<div class="col-md-8 offset-2">
		<h4 style="color:dodgerblue;">Add new Category </h4>
		@*<p>@TempData["Limit"]</p>*@
	</div>
	<div class="row">
			<div class="col-md-8 offset-2">
				<form asp-action="create" method="post">
					@*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
					<div asp-validation-summary="All"></div>
					<div class=" mb-4 form-group">
					<label asp-for="C_Name"></label>
					<input asp-for="C_Name" class="form-control" />
					<span asp-validation-for="C_Name" class="text-danger"></span>
					</div>
					<div class="mb-4 form-group">
					<label asp-for="C_Expense_Limit"></label>
					<input asp-for="C_Expense_Limit" type="text" class="form-control" />
					<span asp-validation-for="C_Expense_Limit" class="text-danger"></span>

					</div>

					<div class="mb-4 form-group">
					<input type="submit" value="Create" class="btn btn-success float-right" />
					<a asp-controller="Dashboard" asp-action="Index" value="Create" class="btn btn-outline-secondary float-left">Show all category</a>
					</div>
				</form>
			</div>
	</div>

</div>

